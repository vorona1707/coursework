{{ define "admin_users" }}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Админ-панель - Пользователи</title>
    <link href="/static/output.css" rel="stylesheet">
</head>
<body class="bg-white min-h-screen flex flex-col items-center">
    {{ template "header" . }}

    <section class="w-full flex flex-col items-center mt-8">
        <h1 class="text-2xl md:text-3xl font-bold mb-4">Управление пользователями</h1>
        <div class="w-11/12 md:w-3/4 lg:w-1/2 flex flex-col items-center gap-4">
            {{ range .Users }}
            <div class="flex w-full p-4 bg-white rounded-lg shadow-md">
                <div class="flex flex-col flex-grow ml-4">
                    <h3 class="text-lg md:text-xl font-semibold">{{ .Name }} {{ .Surname }}</h3>
                    <p class="text-sm md:text-base text-gray-600">{{ .Email }}</p>
                </div>
                <button class="ml-4 px-4 py-2 bg-cyan-700 hover:bg-cyan-800 text-white rounded-md"
                        onclick="editUser({{ .ID }})">Изменить</button>
                <button class="ml-4 px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-md"
                        onclick="deleteUser({{ .ID }})">Удалить</button>
            </div>
            {{ else }}
            <p class="text-lg md:text-xl text-gray-600">Нет доступных пользователей.</p>
            {{ end }}
            
        </div>
    </section>

    <script>
        function editUser(id) {
            window.location.href = '/admin/users/' + id + '/edit';
        }

        function deleteUser(id) {
            if (confirm('Вы уверены, что хотите удалить этого пользователя?')) {
                fetch('/admin/users/' + id + '/delete', { method: 'POST' })
                    .then(() => window.location.reload());
            }
        }

        function createUser() {
            window.location.href = '/admin/users/add';
        }
    </script>

    {{ template "footer" . }}
</body>
</html>
{{ end }}